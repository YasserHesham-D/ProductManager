<Window x:Class="ProductManager.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Details" Height="467" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Name -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Product Name:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox" Height="30" VerticalContentAlignment="Center"/>
        </StackPanel>

        

        <!-- Price -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Price:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="PriceTextBox" Height="30" VerticalContentAlignment="Center"/>
        </StackPanel>


        <!-- Description -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <TextBlock Text="Description:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="DescriptionTextBox" Height="80" 
                     TextWrapping="Wrap" AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" Width="100" Height="35" 
                    Margin="0,0,10,0" Click="Save_Click"
                    Background="#4CAF50" Foreground="White" 
                    FontWeight="Bold" Cursor="Hand"/>
            <Button Content="Cancel" Width="100" Height="35" 
                    Click="Cancel_Click"
                    Background="#9E9E9E" Foreground="White" 
                    FontWeight="Bold" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>