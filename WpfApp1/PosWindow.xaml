<Window x:Class="ProductManager.PosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="POS - New Sale" Height="640" Width="1000" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT: Product list + units -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Products" FontWeight="Bold" FontSize="16" />
            <DataGrid x:Name="ProductsGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      RowHeight="36"
                      Height="220">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200"/>
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock Text="Available Units (for selected product)" Margin="0,8,0,4" FontWeight="Bold" />
            <DataGrid x:Name="UnitsGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      RowHeight="34"
                      Height="200">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Unit" Binding="{Binding UnitName}" Width="*"/>
                    <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice, StringFormat=C}" Width="140"/>
                    <DataGridTemplateColumn Header="Action" Width="140">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Add to Cart" Click="AddToCart_Click" Padding="6,2"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <!-- RIGHT: Cart -->
        <StackPanel Grid.Column="1" Margin="12,0,0,0">
            <TextBlock Text="Current Sale / Cart" FontWeight="Bold" FontSize="16" />
            <DataGrid x:Name="CartGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      RowHeight="34"
                      Height="360"
                      Margin="0,8,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="*"/>
                    <DataGridTextColumn Header="Unit" Binding="{Binding UnitName}" Width="110"/>
                    <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice, StringFormat=C}" Width="110"/>
                    <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="80"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C}" Width="120"/>
                    <DataGridTemplateColumn Header="Actions" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="+" Click="IncreaseQty_Click" Width="30" Margin="2"/>
                                    <Button Content="-" Click="DecreaseQty_Click" Width="30" Margin="2"/>
                                    <Button Content="Remove" Click="RemoveLine_Click" Width="50" Margin="2"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock x:Name="TotalText" FontSize="18" FontWeight="Bold" Margin="0,8,0,0" Text="Total: $0.00"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="Complete Sale" Click="CompleteSale_Click" Width="140" Height="36" Margin="6"/>
                <Button Content="Clear Cart" Click="ClearCart_Click" Width="100" Height="36" Margin="6"/>
                <Button Content="Close" Click="Close_Click" Width="90" Height="36" Margin="6"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
